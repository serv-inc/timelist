{
  "manifest_version": 2,
  "name": "timewhitelist",
  "description": "Block all sites except those on whitelists.",
  "version": "0.5.0",
  "author": "serv-inc",
  "homepage_url": "https://github.com/serv-inc/timelist",
  "short_name": "Whitelist pages with time",
  "applications": {
    "gecko": { "id": "timewhitelist@serv-inc.github.com" }
  },

  "icons": { "128": "clipboard-list-solid.png" },

  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["settings.js", "background.js"]
  },

  "storage": {
    "managed_schema": "schema.json"
  }
}
