{
    "manifest_version": 2,
    "name": "timelist",
    "description": "Block all sites except those on whitelist.",
    "version": "0.1.0",

    "icons": { "128": "clipboard-list-solid.png" },

    "permissions": [
        "tabs",
        "storage"
    ],

    "content_scripts": [ {
        "matches": ["*://*/*"],
        "js": ["blockif.js"]
    } ],

    "storage": {
        "managed_schema": "schema.json"
    },

    "web_accessible_resources": [
        "blocked.html"
    ]
}
